@page "{id:int}"
@model DeTai4.Pages.Design_Staff.EditDesignModel
@{
    ViewData["Title"] = "Chỉnh Sửa Mẫu Thiết Kế";
}

<h1>Chỉnh Sửa Mẫu Thiết Kế</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Design.DesignName">Tên Mẫu Thiết Kế</label>
        <input asp-for="Design.DesignName" class="form-control" />
        <span asp-validation-for="Design.DesignName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Design.Description">Mô Tả</label>
        <textarea asp-for="Design.Description" class="form-control"></textarea>
        <span asp-validation-for="Design.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Design.ImageUrl">Đường Dẫn Hình Ảnh</label>
        <input asp-for="Design.ImageUrl" class="form-control" />
        <span asp-validation-for="Design.ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Design.Cost">Chi Phí</label>
        <input asp-for="Design.Cost" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Design.Cost" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu Thay Đổi</button>
    <a asp-page="/Design_Staff/ManageDesigns" class="btn btn-secondary">Hủy</a>
</form>
