@page
@model DeTai4.Pages.Design_Staff.UploadDesignModel
@{
    ViewData["Title"] = "Upload Design";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Upload Design</h2>

    <!-- Form tải lên thiết kế -->
    <form method="post" enctype="multipart/form-data">
        <!-- Input tên thiết kế -->
        <div class="mb-3">
            <label for="DesignName" class="form-label">Design Name</label>
            <input type="text" class="form-control" id="DesignName" asp-for="NewDesign.DesignName" required />
            <span asp-validation-for="NewDesign.DesignName" class="text-danger"></span>
        </div>

        <!-- Input mô tả thiết kế -->
        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea class="form-control" id="Description" asp-for="NewDesign.Description" rows="3" required></textarea>
            <span asp-validation-for="NewDesign.Description" class="text-danger"></span>
        </div>

        <!-- Input file tải lên -->
        <div class="mb-3">
            <label for="ImageFile" class="form-label">Upload Image</label>
            <input type="file" class="form-control" id="ImageFile" asp-for="NewDesign.ImageUrl" accept="image/*" required />
            <span asp-validation-for="NewDesign.ImageUrl" class="text-danger"></span>
        </div>

        <!-- Nút gửi form -->
        <button type="submit" class="btn btn-primary">Upload Design</button>
    </form>

    <!-- Hiển thị thông báo lỗi nếu có -->
    <div>
        <h3 class="text-danger">
            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
            {
                <text>@ViewData["ErrorMessage"]</text>
            }
        </h3>
    </div>
</div>

@section Scripts {
    @Html.PartialAsync("_ValidationScriptsPartial")
}

