@page
@model DeTai4.Pages.ManageProjectsModel
@{
    ViewData["Title"] = "Quản lý các dự án thi công";
}

<h2>Quản lý các dự án thi công</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tên Dự Án</th>
            <th>Khách Hàng</th>
            <th>Trạng Thái</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model.Projects)
        {
            <tr>
                <td>@project.ProjectName</td>
                <td>@project.Customer.FullName</td>
                <td>@project.Status</td>
                <td>
                    <a asp-page="/EditProject" asp-route-id="@project.ProjectId" class="btn btn-primary">Sửa</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@project.ProjectId" style="display:inline">
                        <button type="submit" class="btn btn-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-page="/CreateProject" class="btn btn-success">Thêm mới dự án</a>
