@page
@model DeTai4.Pages.ConstructionStaff.ReceiveProjectInfoModel
@{
    ViewData["Title"] = "Tiếp Nhận Dự Án Thi Công";
}

<h1>Tiếp Nhận Dự Án Thi Công</h1>

@if (Model.AssignedProjects.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID Dự Án</th>
                <th>Tên Dự Án</th>
                <th>Chi Tiết Yêu Cầu</th>
                <th>Trạng Thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model.AssignedProjects)
            {
                <tr>
                    <td>@project.ProjectId</td>
                    <td>@project.ProjectName</td>
                    <td>@project.RequestDetails</td>
                    <td>@project.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không có dự án nào được phân công cho bạn.</p>
}
