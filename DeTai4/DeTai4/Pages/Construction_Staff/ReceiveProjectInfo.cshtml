@page
@model DeTai4.Pages.Construction_Staff.ReceiveProjectInfoModel
@{
    ViewData["Title"] = "Nhận Thông Tin Dự Án Thi Công";
}

<h2>Nhận Thông Tin Dự Án Thi Công</h2>

<form method="post">
    <div>
        <label for="ProjectName">Tên dự án</label>
        <input type="text" asp-for="Project.ProjectName" class="form-control" required />
        <span asp-validation-for="Project.ProjectName" class="text-danger"></span>
    </div>

    <!-- Bình luận hoặc xóa phần Location nếu không cần thiết -->
    <!-- <div>
        <label for="Location">Địa điểm</label>
        <input type="text" asp-for="Project.Location" class="form-control" required />
        <span asp-validation-for="Project.Location" class="text-danger"></span>
    </div> -->

    <div>
        <label for="StartDate">Ngày bắt đầu</label>
        <input type="date" asp-for="Project.StartDate" class="form-control" required />
        <span asp-validation-for="Project.StartDate" class="text-danger"></span>
    </div>
    <div>
        <label for="EndDate">Ngày kết thúc</label>
        <input type="date" asp-for="Project.EndDate" class="form-control" />
        <span asp-validation-for="Project.EndDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Lưu thông tin</button>
</form>
