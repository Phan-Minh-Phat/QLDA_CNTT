@page
@model DeTai4.Pages.Customer.SubmitProjectRequestModel
@{
    ViewData["Title"] = "Gửi Yêu Cầu Thi Công Hồ Cá Koi";
}

<div class="container-fluid bg-secondary text-center py-5" style="background-color: #6c757d;">
    <h1 class="display-4" style="font-size: 3rem; color: #1c1e21; font-weight: 700; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);">
        @ViewData["Title"]
    </h1>
    <p class="lead" style="color: #2c2f33; font-weight: 500;">
        Hãy chọn mẫu thiết kế và nhập yêu cầu chi tiết của bạn.
    </p>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <!-- Hiển thị thông báo thành công nếu có -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center mt-4">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form method="post">
                        <div class="form-group">
                            <label for="DesignId" class="font-weight-bold">Chọn Mẫu Thiết Kế</label>
                            <select id="DesignId" asp-for="DesignId" class="form-control">
                                <option value="">Chọn Mẫu</option>
                                @foreach (var design in Model.Designs)
                                {
                                    <option value="@design.DesignId">@design.DesignName</option>
                                }
                            </select>
                            <span asp-validation-for="DesignId" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label for="RequestDetails" class="font-weight-bold">Yêu Cầu Chi Tiết</label>
                            <textarea id="RequestDetails" asp-for="RequestDetails" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="RequestDetails" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Gửi Yêu Cầu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
