@page
@model BookMaintenanceServiceModel
@{
    ViewData["Title"] = "Đặt dịch vụ bảo dưỡng";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Đặt Dịch Vụ Bảo Dưỡng</h2>
                </div>
                <div class="card-body">

                    <!-- Hiển thị thông báo thành công nếu có -->
                    @if (TempData.ContainsKey("SuccessMessage"))
                    {
                        <div class="alert alert-success text-center">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form method="post">
                        <div class="form-group">
                            <label asp-for="ServiceId" class="control-label">Chọn dịch vụ</label>
                            <select asp-for="ServiceId" class="form-control">
                                <option value="">-- Chọn dịch vụ --</option>
                                @foreach (var service in Model.Services)
                                {
                                    <option value="@service.ServiceId">@service.ServiceName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="OrderDate" class="control-label">Ngày đặt</label>
                            <input asp-for="OrderDate" type="date" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Đặt dịch vụ</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}