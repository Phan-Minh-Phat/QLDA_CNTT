@page
@model DeTai4.Pages.Customer.BookMaintenanceServiceModel
@{
    ViewData["Title"] = "Dịch Vụ Bảo Trì Sách";
}

<div class="container mt-4">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <p class="text-center">Danh sách sách cần bảo trì</p>

    @if (Model.Books != null && Model.Books.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Mã Sách</th>
                    <th scope="col">Tên Sách</th>
                    <th scope="col">Tác Giả</th>
                    <th scope="col">Ngày Nhập</th>
                    <th scope="col">Tình Trạng</th>
                    <th scope="col">Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model.Books)
                {
                    <tr>
                        <td>@book.BookId</td>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                        <td>@book.EntryDate.ToString("dd/MM/yyyy")</td>
                        <td>@book.Status</td>
                        <td>
                            <a asp-page="/Customer/BookDetails" asp-route-id="@book.BookId" class="btn btn-info">Xem</a>
                            <a asp-page="/Customer/EditBook" asp-route-id="@book.BookId" class="btn btn-warning">Chỉnh Sửa</a>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@book.BookId" class="d-inline">
                                <button type="submit" class="btn btn-danger">Xóa</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center text-muted">Không có sách cần bảo trì.</p>
    }
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}