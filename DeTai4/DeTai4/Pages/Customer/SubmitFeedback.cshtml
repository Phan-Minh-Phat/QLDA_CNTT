@page
@model DeTai4.Pages.Customer.SubmitFeedbackModel
@{
    ViewData["Title"] = "Gửi Phản Hồi";
}

<div class="container mt-4">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <p class="text-center">Chúng tôi rất mong nhận được phản hồi từ bạn</p>

    <form method="post">
        <div class="form-group">
            <label asp-for="Feedback.Name">Tên của bạn</label>
            <input asp-for="Feedback.Name" class="form-control" />
            <span asp-validation-for="Feedback.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Feedback.Email">Email</label>
            <input asp-for="Feedback.Email" type="email" class="form-control" />
            <span asp-validation-for="Feedback.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Feedback.Rating">Đánh giá của bạn (1-5)</label>
            <input asp-for="Feedback.Rating" type="number" min="1" max="5" class="form-control" />
            <span asp-validation-for="Feedback.Rating" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Feedback.Comments">Phản hồi của bạn</label>
            <textarea asp-for="Feedback.Comments" class="form-control"></textarea>
            <span asp-validation-for="Feedback.Comments" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Gửi Phản Hồi</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}