@page
@model DeTai4.Pages.Customer.ManageOrdersModel
@{
    ViewData["Title"] = "Quản Lý Đơn Hàng";
}

<div class="container mt-4">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <p class="text-center">Danh sách các đơn hàng của bạn</p>

    @if (Model.Orders != null && Model.Orders.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Mã Đơn Hàng</th>
                    <th scope="col">Ngày Đặt</th>
                    <th scope="col">Sản Phẩm</th>
                    <th scope="col">Số Lượng</th>
                    <th scope="col">Tổng Tiền</th>
                    <th scope="col">Trạng Thái</th>
                    <th scope="col">Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                        <td>@order.ProductName</td>
                        <td>@order.Quantity</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>@order.Status</td>
                        <td>
                            <a asp-page="/Customer/OrderDetails" asp-route-id="@order.OrderId" class="btn btn-info">Xem</a>
                            <a asp-page="/Customer/EditOrder" asp-route-id="@order.OrderId" class="btn btn-warning">Chỉnh Sửa</a>
                            <form method="post" asp-page-handler="Cancel" asp-route-id="@order.OrderId" class="d-inline">
                                <button type="submit" class="btn btn-danger">Hủy</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center text-muted">Không có đơn hàng nào.</p>
    }
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}